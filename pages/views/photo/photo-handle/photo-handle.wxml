<view class="container">
  <view class="zan-panel">
    <view class="zan-card">
        <image src="{{photoPath}}" mode="aspectFit"></image>
    </view>
  </view>
  <view class="zan-form">
    <view class="zan-cell zan-form__item">
      <text class="zan-form__title">裁剪</text>
      <input class="zan-form__input zan-cell__bd" bindblur="blurClipping" value="{{clipping}}" />
    </view>
    <view class="zan-cell zan-form__item">
      <text class="zan-form__title">排版</text>
      <input class="zan-form__input zan-cell__bd" bindblur="blurTypesetting" value="{{typesetting}}" />
    </view>
    <view class="zan-cell zan-form__item">
      <text class="zan-form__title">打印数量</text>
      <input class="zan-form__input zan-cell__bd" type="number" maxlength="5" bindblur="blurAmount" value="{{amount}}" />
    </view>
    <view class="zan-cell zan-form__item">
      <text class="zan-form__title">签名</text>
      <textarea class="zan-form__input zan-cell__bd" maxlength="200" auto-height placeholder="个性签名描述" bindblur="blurDescription" value="{{description}}" />
    </view>
    <view class="zan-cell zan-form__item">
      <text class="zan-form__title">备注</text>
      <textarea class="zan-form__input zan-cell__bd" maxlength="200" auto-height placeholder="个性签名描述" bindblur="blurRemark" value="{{remark}}" />
    </view>
  </view>
  <view class="zan-panel">
    <view class="zan-btns">
      <button class="zan-btn zan-btn--primary" bindtap="savePrintPhotoInfo">上传</button>
    </view>
  </view>
</view>